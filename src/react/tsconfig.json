{
  "include": [
    "./hooks/**/*.ts",
    "./hooks/**/*.tsx",
    "index.ts",
    "./types/**/*.ts",
    "./contexts/**/*.ts",
    "./contexts/**/*.tsx",
    "./providers/**/*.ts",
    "./providers/**/*.tsx"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node"],
    "paths": {
      "@ably/chat": ["../../dist/chat"]
    }
  }
}

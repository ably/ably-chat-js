{
  "include": ["./**/*.ts"],
  "exclude": ["./fakes/**/*.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "stripInternal": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node"]
  }
}

{
  "name": "@ably/chat-react",
  "version": "0.4.0",
  "description": "Ably Chat is a set of purpose-built APIs for a host of chat features enabling you to create 1:1, 1:Many, Many:1 and Many:Many chat rooms for any scale. It is designed to meet a wide range of chat use cases, such as livestreams, in-game communication, customer support, or social interactions in SaaS products.",
  "type": "module",
  "main": "dist/chat/ably-chat-react.umd.cjs",
  "browser": "dist/chat/ably-chat-react.js",
  "types": "dist/chat/index.d.ts",
  "react-native": "dist/chat/ably-chat-react.umd.cjs",
  "exports": {
    ".": {
      "react-native": "./dist/chat/ably-chat-react.umd.cjs",
      "types": "./dist/chat/index.d.ts",
      "import": "./dist/chat/ably-chat-react.js",
      "require": "./dist/chat/ably-chat-teact.umd.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "build": "vite build --emptyOutDir",
    "prepare": "npm run build",
    "test:typescript": "tsc",
    "postinstall": "npm run build"
  },
  "files": [
    "dist/**",
    "src/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ably/ably-chat-js.git"
  },
  "keywords": [
    "chat",
    "ably",
    "ably-realtime",
    "websockets"
  ],
  "author": "Ably Realtime",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ably/ably-chat-js/issues"
  },
  "homepage": "https://github.com/ably/ably-chat-js#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@ably/chat": "^0.4.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.3",
    "aws-sdk": "^2.1656.0",
    "globals": "^15.11.0",
    "jsdom": "^25.0.1",

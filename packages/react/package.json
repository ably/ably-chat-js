    "minimist": "^1.2.8",
    "prettier": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.5.2",
    "vite": "^6.0.2",
    "vite-plugin-dts": "^4.2.4",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "dequal": "^2.0.3",

{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./test/**/*.d.ts",
  ],
  "exclude": [
    "src/core/utils/**/*",
    "test/core/utils/**/*",
  ],
  "compilerOptions": {
    "rootDir": ".",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
    ],
    "paths": {
        "@ably/chat": ["./dist/chat"],
        "@ably/chat/react": ["./dist/react"]
    }
  }
}

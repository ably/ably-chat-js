{
  "name": "@ably-labs/chat",
  "version": "0.0.1",
  "description": "The Ably Chat SDK offers a seamless and customizable API designed to facilitate diverse in-app conversations scenarios, encompassing live comments, in-app chat functionalities, and the management of real-time updates and user interactions",
  "type": "module",
  "main": "dist/ably-chat.umd.cjs",
  "browser": "dist/ably-chat.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ably-chat.js",
      "require": "./dist/ably-chat.umd.cjs"
    }
  },
  "scripts": {
    "lint": "eslint . && cspell '{src,test}/**' './*.md'",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write src test __mocks__ demo/src",
    "format:check": "prettier --check src test __mocks__ demo/src",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "build": "vite build",
    "prepare": "npm run build",
    "test:typescript": "tsc --project tsconfig.test.json",
    "demo:reload": "npm run build && cd demo && npm i file:../",
    "docs": "typedoc",
    "modulereport": "tsc --noEmit --esModuleInterop scripts/moduleReport.ts && esr scripts/moduleReport.ts"
  },
  "files": [
    "dist/**",
    "src/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ably-labs/conversations.git"
  },
  "keywords": [
    "chat",
    "ably",
    "ably-realtime",
    "websockets"
  ],
  "author": "Ably Realtime",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ably-labs/conversations/issues"
  },
  "homepage": "https://github.com/ably-labs/conversations#readme",
  "peerDependencies": {
    "ably": "^2.2.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.5.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.3.2",
    "typedoc": "^0.26.3",
    "typedoc-plugin-no-inherit": "^1.4.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.2",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "cspell": "^8.10.1"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "dequal": "^2.0.3"

  }
}

{
  "extends": "@tsconfig/node20/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonJS",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": [
      "node"
    ]
  }
}
